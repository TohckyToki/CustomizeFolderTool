<Window x:Class="CustomizeFolderTool.Forms.Tipinfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomizeFolderTool.Forms"
        mc:Ignorable="d"
        Title="备注管理" WindowStyle="ToolWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid Height="93" Width="362">
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="请输入文件夹备注" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTipinfo" HorizontalAlignment="Left" Height="24" Margin="10,30,0,0" TextWrapping="NoWrap" KeyDown="TextBoxKeyDown" VerticalAlignment="Top" Width="342" VerticalContentAlignment="Center" MaxLines="1"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="90" Height="24" Click="Button1Click"/>
        <Button Content="取消" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="90" Height="24" Click="Button1Click"/>
    </Grid>
</Window>
