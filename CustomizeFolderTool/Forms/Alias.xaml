<Window x:Class="CustomizeFolderTool.Forms.Alias"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomizeFolderTool.Forms"
        mc:Ignorable="d"
        Title="别名管理" WindowStyle="ToolWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid Height="93" Width="362">
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="请输入文件夹别名" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAlias" HorizontalAlignment="Left" Height="24" Margin="10,30,0,0" TextWrapping="Wrap" KeyDown="TextBoxKeyDown" VerticalAlignment="Top" Width="342" VerticalContentAlignment="Center"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Width="90" Height="24" Click="Button1Click"/>
        <Button Content="取消" Margin="0,59,10,0" VerticalAlignment="Top" Height="24" Click="Button2Click" HorizontalAlignment="Right" Width="90"/>
    </Grid>
</Window>
